<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

<!--    https://www.kodeco.com/1560485-android-recyclerview-tutorial-with-kotlin-->
<!--    https://github.com/camilozky/Galacticon-->

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"

        tools:targetApi="23">
<!--        android:networkSecurityConfig="@xml/network_security_config"-->

        <meta-data
            android:name="nasa.api.data.gov"
            android:value="@string/nasa_api_key"/>

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".PhotoActivity"></activity>
    </application>
</manifest>